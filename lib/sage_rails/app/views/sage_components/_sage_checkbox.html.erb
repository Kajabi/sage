<% if component.standalone %>
  <input 
    id="<%= component.id %>" 
    type="checkbox" 
    class="
      sage-checkbox
      sage-checkbox--standalone
      <%= "sage-checkbox--partial-selection" if component.partial_selection %>
      <%= component.has_error ? "sage-checkbox--error" : "" %>
      <%= component.css_classes if component.css_classes.present? %>
    "
    <%= "checked" if component.checked %>
    <%= "disabled" if component.disabled %>
    <%= "required" if component.required %>
    aria-label="<%= component.label_text %>"
    name="<%= component.name %>"
    value="<%= component.value %>"
  />
<% else %>
  <div class="
      sage-checkbox
      <%= "sage-checkbox--partial-selection" if component.partial_selection %>
      <%= component.has_error ? "sage-checkbox--error" : "" %>
      <%= component.css_classes if component.css_classes.present? %>
    "
  >
    <input 
      id="<%= component.id %>" 
      type="checkbox" 
      class="sage-checkbox__input"
      name="<%= component.name %>"
      value="<%= component.value %>"
      <%= "checked" if component.checked %>
      <%= "disabled" if component.disabled %>
      <%= "required" if component.required %>
    />
    <label for="<%= component.id %>" class="sage-checkbox__label">
      <%= component.label_text %>
    </label>
  </div>
<% end %>

