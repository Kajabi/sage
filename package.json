{
  "name": "sage",
  "version": "1.0.0",
  "description": "The Sage Design System (SDS) is our single source of truth, providing everything you need to build great products for our customers. It is the culmination of designers and developers working together to give teams the ability to ship high-quality products faster.",
  "main": "sage/pages/index",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "start": "npm-run-all -p dummy stylelint sync",
    "test": "run-s stylelint validate a11y",
    "dummy": "cd test/dummy && rails s",
    "sync": "browser-sync start --port 4000 --proxy localhost:3000 --files 'app/**/*.*' --startPath 'sage/pages/index'",
    "stylelint": "stylelint \"**/*.scss\"",
    "a11y": "./node_modules/.bin/pa11y-ci",
    "validate": "site-validator http://localhost:3000/sage/pages/index --local --clear-cache --output validation-results"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kajabi/sage.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kajabi/sage/issues"
  },
  "homepage": "https://github.com/Kajabi/sage#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^2.3.0",
    "site-validator-cli": "^1.3.3",
    "stylelint": "^13.2.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
