<%
sample_items = %(
  <li class="sage-icon-card sage-icon-card--draft"><i class="sage-icon-check-2xl"></i></li>
  <li class="sage-icon-card sage-icon-card--info"><i class="sage-icon-check-2xl"></i></li>
  <li class="sage-icon-card sage-icon-card--success"><i class="sage-icon-check-2xl"></i></li>
  <li class="sage-icon-card sage-icon-card--warning"><i class="sage-icon-check-2xl"></i></li>
  <li class="sage-icon-card sage-icon-card--danger"><i class="sage-icon-check-2xl"></i></li>
)
%>

<h5>Unstyled List</h5>
<%= render "examples/elements/tiles/markup", 
  items: sample_items
%>

<h5>Inline (fit)</h5>
<%= render "examples/elements/tiles/markup", 
  items: sample_items,
  layout: "inline-fit"
%>

