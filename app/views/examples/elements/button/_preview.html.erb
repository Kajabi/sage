<% 
demo_configs = [
  {
    heading: "Primary (regular and disabled)",
    label: "Primary",
    style: "primary",
  },
  {
    heading: "Secondary (regular and disabled)",
    label: "Secondary",
    style: "secondary",
  },
  {
    heading: "Danger (regular and disabled)",
    label: "Danger",
    style: "danger",
  }
]
%>
<% demo_configs.each do | config | %>
  <h3 class="t-sage-heading-6"><%= config[:heading] %></h3>

  <% [false, true].each do | disabled | %>
    <%= sage_component SageButtonGroup, { spacer: { bottom: :xs }} do %>
      <!-- Primary button -->
      <%= sage_component SageButton, {
        value: "Button",
        style: config[:style],
        disabled: disabled
      } %>

      <!-- Primary button (link) -->
      <%= sage_component SageButton, {
        value: "Link",
        style: config[:style],
        attributes: {
          href: "#element-button"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-left) -->
      <%= sage_component SageButton, {
        value: "Left icon",
        style: config[:style],
        icon: {
          style: "left",
          name: "menu"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-right) -->
      <%= sage_component SageButton, {
        value: "Right icon",
        style: config[:style],
        icon: {
          style: "right",
          name: "menu"
        },
        disabled: disabled
      } %>

      <!-- Primary button (icon-only) -->
      <%= sage_component SageButton, {
        value: "Icon only",
        style: config[:style],
        icon: {
          style: "only",
          name: "menu"
        },
        disabled: disabled
      } %>
    <% end %>
  <% end %>
<% end %>

<h3 class="t-sage-heading-6">Button group: Align End</h3>
<%= sage_component SageButtonGroup, { align: "end" } do %>
  <%= sage_component SageButton, {
    value: "Save",
    style: "primary",
  } %>
  <%= sage_component SageButton, {
    value: "Cancel",
    style: "tertiary",
  } %>
<% end %>
