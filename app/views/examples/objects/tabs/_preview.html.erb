<h3 class="t-sage-heading-6">Regular tabs</h3>
<div class="sage-tabs-container">
  <%= sage_component SageTabs, {
      id: "example-tabs1",
      items: [
        {
          text: "Sub Page 1",
          target: "basic-test1",
          active: true
        },
        {
          text: "Sub Page 2",
          target: "basic-test2"
        },
        {
          text: "Sub Page 3",
          target: "basic-test3"
        },
      ]
    }
  %>

