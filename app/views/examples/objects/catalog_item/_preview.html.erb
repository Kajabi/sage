<% 3.times do %>
  <%= sage_component SageCatalogItem, {
    title: "Fun For All â€“ The Children Call: Their Favorite Time Of Year",
    image: asset_pack_path("media/images/docs/card/card-placeholder-sm.png"),
    href: "#"
  } do %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "comment", style: "left" },
      content: "5 Golden Eggs",
    } %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "users", style: "left" },
      content: "3 Geese A-Laying",
    } %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "coupon", style: "left" },
      content: "1 Partridge In A Pear Tree",
    } %>
    <%= content_for :sage_aside do %>
      <%= sage_component SageDropdown, {
        align: "right",
        items: [{
          content: sage_component(SageLabel, { color: "success", content: "Publish" }),
          attributes: { "href": "#" },
        }, {
          content: sage_component(SageLabel, { color: "info", content: "Drip" }),
          attributes: { "href": "#" },
        }, {
          content: sage_component(SageLabel, { color: "draft", content: "Draft" }),
          attributes: { "href": "#" },
        }, {
          content: "Delete Category",
          icon: "trash",
          style: "danger",
          attributes: { "href": "#" },
        }]
      } do %>
        <%= sage_component SageLabel, {
          color: "info",
          interactive: true,
          content: "Drip",
          icon: { style: "right", name: "caret-down" }
        } %>
      <% end %>
      <%= sage_component SageDropdown, {
        align: "right",
        items: [{
          content: "Edit Item",
          icon: "pen",
          attributes: {
            "href": "#",
          },
        }]
      } do %>
        <%= sage_component SageButton, {
          style: "tertiary",
          icon: { name: "dot-menu-horizontal", style: "only" },
          content: "Edit",
          align: "end"
        } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
