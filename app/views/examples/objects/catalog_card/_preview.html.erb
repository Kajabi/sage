<% 3.times do %>
  <%= sage_component SageCatalogCard, {
    title: "'Fun For All', The Children Call: Their Favorite Time Of Year",
    image: asset_pack_path("media/images/docs/card/card-placeholder-sm.png"),
    href: "#"
  } do %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "comment", style: "left" },
      value: "5 Golden Eggs",
    } %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "users", style: "left" },
      value: "3 Geese A-Laying",
    } %>
    <%= sage_component SageButton, {
      style: "tertiary",
      size: "tiny",
      icon: { name: "coupon", style: "left" },
      value: "1 Partridge In A Pear Tree",
    } %>
    <%= content_for :sage_aside do %>
      <span class="sage-label sage-label--draft">Draft</span>
      <%= sage_component SageDropdown, {
        align: "right",
        items: [{
          name: "Edit Item",
          icon: "pen",
          attributes: {
            "href": "#",
          },
        }]
      } do %>
        <%= sage_component SageButton, {
          style: "tertiary",
          icon: { name: "dot-menu-horizontal", style: "only" },
          value: "Edit",
          align: "end"
        } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
