<% permalink = "object-#{title}" %>

<div class="sage-panel">
  <div class="sage-panel__header">
    <h2 id="<%= permalink %>" class="sage-panel__title">
      <%= link_to title.titleize, "##{permalink}", class: "example__link" %>
    </h2>

    <div class="sage-panel__header-aside sage-btn-group sage-btn-group--gap-md">
      <%= link_to pages_object_path(title), class: "sage-btn sage-btn--secondary sage-btn--subtle sage-btn--icon-only-preview-on", data: { "js-tooltip": "Inspect object details" } do %>
        <span class="visually-hidden">View Details</span>
      <% end %>
      <%= link_to pages_breakout_path(type: :object, title: title), target: "_blank", class: "sage-btn sage-btn--secondary sage-btn--subtle sage-btn--icon-only-launch", data: { "js-tooltip": "Open breakout page" } do %>
        <span class="visually-hidden">Opens <%= title.titleize %> in a new window</span>
      <% end %>
    </div>
  </div>
  <div class="sage-type">
    <%= render "examples/objects/#{title}/preview" %>
  </div>
</div>
