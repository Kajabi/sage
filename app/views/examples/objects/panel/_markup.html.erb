    <div class="sage-panel__header"><%= header.html_safe %></div>
  <% end %>
  <div class="sage-panel__body"><%= body.html_safe %></div>
  <% if defined?(footer) %>
    <div class="sage-panel__footer"><%= footer.html_safe %></div>
  <% end %>
</div>
