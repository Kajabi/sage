<% if props_content.present? %>
  <div class="sage-type">
    <h2 id="<%= @title %>-example-props" class="t-sage-heading-3">Properties</h2>
    <div class="sage-table-wrapper">
      <div class="sage-table-wrapper__overflow">
        <table class="sage-table sage-table--properties">
          <thead>
            <tr>
              <th>Property</th>
              <th>Description</th>
              <th>Type</th>
              <th>Default</th>
            </tr>
          </thead>
          <%= props_content %>
        </table>
      </div>
    </div>
  </div><br><br>
<% end %>
