<% if do_content.present? || dont_content.present? %>
  <div class="sage-panel">
    <div class="sage-panel__header">
      <h2 id="<%= @title %>-example-best-practices" class="t-sage-heading-2">Best Practices</h2>
    </div>
    <div class="sage-panel__body">
      <div class="sage-row">
        <div class="sage-col--md-6">
          <h3 class="t-sage-heading-6">Do</h3>
          <div class="sage-type">
            <%= do_content %>
          </div>
        </div>
        <div class="sage-col--md-6">
          <h3 class="t-sage-heading-6">Don't</h3>
          <div class="sage-type">
            <%= dont_content %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
