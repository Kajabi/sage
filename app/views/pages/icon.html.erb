      </li>
    </ul>
  </div>
<% end %>
<div id="action-icons" class="sage-type">
  <h2>Action Icons</h2>
  <%= sage_component SageGridRow, {} do %> 
    <% action_icons.each do |icon| %>
      <%= sage_component SageGridCol, { breakpoint: "md", size: "4" } do %>
        <div class="sage-icon-block">
          <i class="sage-icon-<%= icon %>-2xl" aria-hidden="true"></i>
          <p class="sage-icon-block__label">sage-icon-<%= icon %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
