<%= sage_component SageContainer, { size: "xs" } do %>
  <%= sage_component SagePageHeading, {
    title: "Domain",
    spacer: { bottom: :lg },
    help_link: {
      url: "#help",
      label: "Help"
    },
  } do %>
    <% content_for :sage_breadcrumbs do %>
      <%= sage_component SageBreadcrumbs, {
          has_back_icon: true,
          items: [{
          text: "Settings",
          url: "#settings"
        }]
      } %>
    <% end %>
    <% content_for :sage_page_heading_actions do %>
      <%= sage_component SageButton, {
        style: "primary",
        icon:{ 
          name: "add",
          style: "left"
        },
        value: "Custom Domain"
      } %>
    <% end %>
  <% end %>
  <%= sage_component SagePanel, {} do %>
    <%= sage_component SagePanelHeader, {
      title: "Custom Domain"
    } do %>
      <!-- TODO: Add option dropdown menu -->
      <%= sage_component SageButton, {
        value: "Options",
        style: "tertiary",
        size: "tiny",
        icon: {
          name: "dot-menu-horizontal",
          style: "only"
        },
        attributes: {
          href: "#options"
        }
      } %>
    <% end %>
    <p><b>www.daydreamsurfshop.com</b></p>
    <p>
      <%= sage_component SageLabel, {
        value: "Connected",
        style: "success"
      } %>
      <!-- FYI: Other variations: -->
      <%# sage_component SageLabel, {
        value: "Connection in progress...",
        style: "warning"
      } %>
      <%# sage_component SageLabel, {
        value: "Connection failed",
        style: "danger"
      } %>
    </p>

    <%= sage_component SagePanelDivider, {} %>

    <%= sage_component SagePanelHeader, {
      title: "Kajabi Subdomain"
    } do %>
      <%= sage_component SageButton, {
        value: "Edit",
        style: "tertiary",
        size: "tiny",
        icon: {
          name: "pen",
          style: "only"
        },
        attributes: {
          href: "#edit"
        }
      } %>
    <% end %>
    <p><b>www.daydreamsurfshop.mykajabi.com</b></p>
    <p class="t-sage--color-charcoal-200">This is the default subdomain connected to your Kajabi site. All sites are given a Kajabi subdomain that you can replace with a custom domain or purchase a new one through Kajabi.</p>
    <p>
      <%= sage_component SageLabel, {
        value: "Default",
        style: "draft"
       } %>
    </p>
  <% end %>
<% end %>
