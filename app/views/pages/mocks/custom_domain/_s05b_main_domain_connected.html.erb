<%= sage_component SageContainer, { size: "xs" } do %>
  <%= sage_component SagePageHeading, {
    title: "Domain",
    spacer: { bottom: :lg },
    help_link: {
      url: "#help",
      label: "Help"
    },
  } do %>
    <% content_for :sage_breadcrumbs do %>
      <%= sage_component SageBreadcrumbs, {
          has_back_icon: true,
          items: [{
          text: "Settings",
          url: "#settings"
        }]
      } %>
    <% end %>
    <% content_for :sage_page_heading_actions do %>
      <%= sage_component SageButton, {
        style: "primary",
        icon:{ 
          name: "add",
          style: "left"
        },
        value: "Custom Domain"
      } %>
    <% end %>
  <% end %>
  <div class="sage-panel-set">
    <%= sage_component SagePanel, {} do %>
      <%= sage_component SageCardRow, {
        grid_template: "ite"
      } do %>
        <i class="sage-icon-check-circle-lg t-sage--color-sage" aria-label="Connected!"></i>
        <strong class="t-sage-heading-5">daydreamsurfshop.com</strong>
        <span class="t-sage-body t-sage--color-charcoal-200">is connected</span>
        <%= render "pages/mocks/custom_domain/shared/option_menu" %>
      <% end %>

      <%= sage_component SagePanelDivider, { bleed: true } %>

      <%= sage_component SageCard, {} do %>
        <%= sage_component SageTable, {
          headers: [
            "Kajabi Subdomain"
          ],
          reset_above: true,
          reset_below: true,
          rows: [
            [
              "www.daydreamsurfshop.mykajabi.com",
              sage_component(SageLabel, {
                value: "Connected",
                style: "success"
                # Alternate options...
                #value: "Connection in progress...",
                #style: "warning"
                #value: "Connection failed",
                #style: "danger"
              }),
              { 
                value: render("pages/mocks/custom_domain/shared/edit_button", href: "#edit"),
                html_attributes: {
                  class: "sage-table-cell--align-right"
                }
              }
            ]
          ]
        } %>
      <% end %>
    <% end %>
  </div>
<% end %>
