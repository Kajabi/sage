<%= content_for :heading do %>
  <h1>Sandbox</h1>
  <p>Use this scratchpad to test out elements and objects in context. Just be sure not to commit your changes. ❤️</p>
<% end %>

<%= sage_component SagePageHeading, {
  title: "Order Summary",
  spacer: { bottom: :md }
} do %>
  <% content_for :sage_breadcrumbs do %>
    <%= render "examples/elements/breadcrumbs/markup",
      klass: "sage-page-heading__back",
      has_back_icon: true,
      items: [{
        text: "Back to Something",
        url: "#"
      }]
    %>
  <% end %>
<% end %>

<%= sage_component SagePanel, { spacer: { bottom: :lg } } do %>
  <%= sage_component SagePanelHeader, { title: "Domain" } %>

  <%= sage_component SageCard, {} do %>
    <%= sage_component SageCardRow, { grid_template: "b-eti" } do %>
      <%= render "examples/elements/icon_card/markup",
        color: "info",
        icon: "connect"
      %>
      <%= sage_component SageCardBlock, {} do %>
        <p class="t-sage-body-semi">
          daydreamsurfshop.com
        </p>
        <p class="t-sage-body-small t-sage--color-charcoal-200">
          Auto renews yearly on August 6th
        </p>
      <% end %>
      <p class="t-sage-body-semi t-sage--color-sage">First year free!</p>
      <p class="t-sage-heading-5 t-sage--color-grey-400 t-sage--strikethrough">$8.99</p>
    <% end %>
  <% end %>
  
  <hr />
  <%= sage_component SagePanelTiles, { tiles_in_row: 2 } do %>
    <div class="sage-panel__tile">
      <%= sage_component SagePanelSubheader, { title: "Billing Information" } do %>
        <%= sage_component SageButton, { value: "Edit", style: "tertiary", size: "tiny", icon: {style: "only", name: "pen" } } %>
      <% end %>
      <%= sage_component SageCard, {} do %>
        <%= sage_component SageCardRow, { grid_template: "b-m", vertical_align: "start" } do %>
          <%= sage_component SageCardBlock, { color: "charcoal-200", type_block: true } do %>
            <p>
              John Doe<br/>
              john@doe.com<br/>
              9494587494
            </p>
            <p>Account ID: 13894</p>
          <% end %>
          <%= sage_component SageCardBlock, { color: "charcoal-200", type_block: true } do %>
            <p>
              123 Kajabi Ln<br/>
              Irvine, CA 92604<br/>
              United States
            </p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="sage-panel__tile">
      <%= sage_component SagePanelSubheader, { title: "WHOIS Privacy" } %>
      <%= sage_component SageCard, {} do %>
        <%= sage_component SageCardBlock, { color: "charcoal-200", type_block: true } do %>
          <p>
            This domain includes WHOIS privacy at no extra cost.
            This means your personal information won’t be displayed in public domain registration records.
          </p>
          <p><a href="#">Learn more</a></p>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= sage_component SagePanelBlock, { type_block: true } do %>
    <p>
      By purchasing this domain you have read and agreed to the
      <a href="#">ICANN policy</a> and
      <a href="#">Domain Registration Agreement</a>.
    </p>
  <% end %>
  <%= sage_component SagePanelFooter, {} do %>
    <%= sage_component SageButton, { value: "Cancel", style: "tertiary" } %>
    <%= sage_component SageButton, { value: "Complete Purchase", style: "primary" } %>
  <% end %>
<% end %>
