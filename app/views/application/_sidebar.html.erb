<div class="sage-sidebar" data-js-sidebar="sage-sidebar-menu" id="sage-sidebar-menu">
  <div class="sage-sidebar__body">
    <nav class="sage-nav" aria-label="Main">
      <ul class="sage-nav__list">
        <li>
          <%= link_to "Design", pages_index_path, class: "sage-nav__link #{"sage-nav__link--active" if current_page_design?}" %>
          <% if current_page_design? %>
            <ul class="sage-nav__list sage-nav__list--sub">
              <% @design_pages.each do | page | %>
                <li>
                  <%= link_to page[:name], page[:path], class: "sage-nav__link sage-nav__link--sub #{"sage-nav__link--active" if current_page?(page[:path])}" %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </li>
        <li>
          <%= link_to "Elements", pages_elements_path, class: "sage-nav__link #{"sage-nav__link--active" if current_page_elements?}" %>
        </li>
        <li>
          <%= link_to "Objects", pages_objects_path, class: "sage-nav__link #{"sage-nav__link--active" if current_page_objects?}" %>
        </li>
        <li>
          <%= link_to "Sandbox", pages_sandbox_path, class: "sage-nav__link #{"sage-nav__link--active" if current_page?(pages_sandbox_path)}" %>
        </li>
      </ul>
    </nav>
  </div>
  <div class="sage-sidebar__footer">
    <nav class="sage-nav" aria-label="Secondary">
      <ul class="sage-nav__list">
        <li><%= link_to "Voice & Tone", "https://github.com/Kajabi/sage/wiki/Voice-&-Tone", class: "sage-nav__link", target: "_blank", rel: "noopener noreferrer" %></li>
        <li><%= link_to "Guidelines", "https://github.com/Kajabi/sage/wiki", class: "sage-nav__link", target: "_blank", rel: "noopener noreferrer" %></li>
        <li><%= link_to "Code Status", pages_status_path, class: "sage-nav__link #{"sage-nav__link--active" if current_page?(pages_status_path)}" %></li>
      </ul>
    </nav>
  </div>
</div>
