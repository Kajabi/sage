<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render "meta" %>
    <%= render "styles" %>
  </head>
  <body class="sage-page">
    <div class="sage-stage">
      <div class="sage-content">
        <div class="sage-container--sm">
          <%= image_tag("sage/sage_icon.svg", class: "sage-page__icon")%>
          <%= yield :heading %>
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="sage-overlay" aria-hidden="true"></div>
    <%= render "scripts" %>
  </body>
</html>
