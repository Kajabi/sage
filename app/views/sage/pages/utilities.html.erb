<%= content_for :heading do %>
  <h1>Utilities</h1>
  <p>Utilities should be used to accomplish specific styling needs, and should be used sparingly, especially when modifying the default styling of a Style Guide Guide component.</p>
<% end %>
<%= content_for :quick_links do %>
  <div class="quick-links">
    <div class="sage-media">
      <i class="quick-links__icon sage-icon sage-icon-menu-8"></i>
      <div class="sage-media__body">
        <h5 class="quick-links__heading">Contents</h5>
      </div>
    </div>
    <% sorted_sage_utilities.each do |utility| %>
      <a href="#<%= utility[:title] %>" class="quick-links__link"><%= utility[:title] %></a>
    <% end %>
  </div>
<% end %>
<% sorted_sage_utilities.each do |utility| %>
  <%= render "sage/examples/utilities/utility", title: utility[:title] %>
<% end %>
