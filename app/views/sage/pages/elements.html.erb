<%= content_for :heading do %>
  <h1>Elements</h1>
  <p>Elements are the basic building blocks of matter. Applied to web interfaces, atoms are our HTML tags, such as a form label, an input or a button.</p>
<% end %>
<%= content_for :quick_links do %>
  <div class="quick-links">
    <div class="quick-links__header">
      <i class="quick-links__icon sage-icon sage-icon-menu-8"></i>
      <h5 class="quick-links__title">Contents</h5>
    </div>
    <div class="quick-links__body">
      <% sorted_sage_elements.each do |element| %>
        <a href="#<%= element[:title] %>" class="quick-links__link"><%= element[:title].titleize %></a>
      <% end %>
    </div>
  </div>
<% end %>
<% sorted_sage_elements.each do |element| %>
  <%= render "sage/examples/elements/element", title: element[:title] %>
<% end %>
