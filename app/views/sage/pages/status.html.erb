<%= content_for :heading do %>
  <h1>Code Status</h1>
  <p>Our Elements and Objects and the platforms they're available in.</p>
  <%= render "status_key" %>
<% end %>
<%= content_for :quick_links do %>
  <div class="quick-links">
    <h2 class="quick-links__title t-sage-heading-5">Contents</h2>
    <h3 class="quick-links__subhead t-sage-body">Elements</h3>
    <ul class="quick-links__body t-sage-body-small">
      <% sorted_sage_elements.each do |element| %>
        <li class="quick-links__item">
          <a href="#<%= element[:title] %>" class="quick-links__link"><%= element[:title].titleize %></a>
        </li>
      <% end %>
    </ul>
    <h3 class="quick-links__subhead t-sage-body">Objects</h3>
    <ul class="quick-links__body t-sage-body-small">
      <% sorted_sage_objects.each do |object| %>
        <li class="quick-links__item">
          <a href="#<%= object[:title] %>" class="quick-links__link"><%= object[:title].titleize %></a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="sage-panel">
  <h2 class="t-sage-heading-2">Elements</h2>
  <div class="sage-table-wrapper">
    <div class="sage-table-wrapper__overflow">
      <table class="sage-table sage-table--status">
        <thead>
          <tr>
            <th>Element</th>
            <th>Platforms</th>
            <th>Design</th>
            <th>Development</th>
            <th>Documentation</th>
          </tr>
        </thead>
        <% sorted_sage_elements.each do |element| %>
          <%= render "status_item", item: element %>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="sage-panel">
  <h2 class="t-sage-heading-2">Objects</h2>
  <div class="sage-table-wrapper">
    <div class="sage-table-wrapper--overflow">
      <table class="sage-table sage-table--status">
        <thead>
          <tr>
            <th>Object</th>
            <th>Platforms</th>
            <th>Design</th>
            <th>Development</th>
            <th>Documentation</th>
          </tr>
        </thead>
        <% sorted_sage_objects.each do |object| %>
          <%= render "status_item", item: object %>
        <% end %>
      </table>
    </div>
  </div>
</div>
