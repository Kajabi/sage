<% selectID = name.downcase.dasherize %>

<div class="sage-select <%= "sage-select--error" if has_error %>">
  <select class="sage-select__field" name="<%= selectID %>" id="<%= selectID %>">
    <% select_options.each do |option| %>
      <option value="<%= option[:value] %>"><%= option[:text] %></option>
    <% end %>
  </select>
  <label class="sage-select__label" for="<%= selectID %>"><%= name %></label>
  <div class="sage-select__message"><%= message %></div>
</div>
