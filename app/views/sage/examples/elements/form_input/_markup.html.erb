<div class="sage-input<%= has_error ? " sage-input--error" : "" %>">
  <input type="<%= input_type %>" id="<%= id %>" class="sage-input__field" name="<%= id %>" placeholder="<%= placeholder %>" <%= required ? "required" : "" %><% if input_mode != "" %> inputmode="<%= input_mode %>"<% end %><% if max != "" %> max="<%= max %>"<% end %><% if minlength != "" %> minlength="<%= minlength %>"<% end %><% if maxlength != "" %> maxlength="<%= maxlength %>"<% end %>>
  <label for="<%= id %>" class="sage-input__label"><%= label_text %></label>
  <% if message_text != "" %><div class="sage-input__message"><%= message_text %></div><% end %>
</div>