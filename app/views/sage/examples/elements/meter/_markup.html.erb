<div class="sage-meter">
  <% if label != "" %><label for="<%= id -%>" class="sage-meter__label"><%= label -%></label><% end %>
  <meter class="sage-meter__bar" id="<%= id -%>" max="<%= max_value -%>" <% if optimum_value != "" -%>optimum="<%= optimum_value -%>"<%- end %> value="<%= value -%>" js-meter-type="password">
    <div class="sage-meter__fallback" aria-hidden="true">
      <span class="sage-meter-fallback-text"><%= fallback_text -%></span>
    </div>
  </meter>
</div>
