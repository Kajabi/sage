<div class="sage-live-stream-footer">
  <div class="sage-live-stream-footer__settings">
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: '', 
      label: 'Settings', 
      icon: 'gear',
      isPill: false
    %>
  </div>
  <div class="sage-live-stream-footer__stream-controls">
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: '', 
      label: 'Toggle Microphone', 
      icon: 'microphone',
      isPill: false
    %>
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: '', 
      label: 'Toggle Camera', 
      icon: 'video-on',
      isPill: false
    %>
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: 'sage-live-stream-control--inactive', 
      label: 'Toggle Screen Share', 
      icon: 'screen-share-on',
      isPill: false
    %>
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: 'sage-live-stream-control--start', 
      label: 'Toggle Recording', 
      icon: 'play',
      isPill: false
    %>
  </div>
  <div class="sage-live-stream-footer__chat-controls">
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: 'sage-live-stream-control--pill' + (!isAwake ? ' sage-live-stream-control--flat' : ''), 
      label: '108', 
      icon: 'users',
      isPill: true
    %>
    <%= render "sage/examples/objects/live_stream_control/markup", 
      modifiers: !isAwake ? 'sage-live-stream-control--flat' : '', 
      label: 'Toggle Chat', 
      icon: 'conversation',
      isPill: false
    %>
  </div>
</div>