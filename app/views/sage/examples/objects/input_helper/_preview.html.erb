<fieldset class="sage-type">
  <h3 class="t-sage-heading-6">Input helper in an input group</h3>
  <%= render "sage/examples/objects/input_group/markup",
    group_id: "input-helper-example",
    has_button: true,
    group_button_type: "password",
    group_button_label: "Password",
    group_button_style: "",
    group_button_icon: "sage-btn--icon-left-preview-on",
    group_button_text: "Toggle password visibility",
    group_button_text_hidden: true,
    group_button_tooltip: true,
    group_button_tooltip_text: "Toggle password visibility",
    group_button_tooltip_position: "top",
    group_button_tooltip_size: "small"
  %>
  <%= render "sage/examples/objects/input_helper/markup",
    helper_id: "",
    helper_target: "input-helper-example",
    description: "Your password must meet the following criteria:",
    hints: [
      {
        id: "pw-hint-characters",
        type_detect: "characters",
        type_detect_min: 8,
        text: "At least eight characters"
      },
      {
        id: "pw-hint-numbers",
        type_detect: "numbers",
        type_detect_min: 1,
        text: "Has one or more numbers"
      },
      {
        id: "pw-hint-symbols",
        type_detect: "symbols",
        type_detect_min: 1,
        text: "Includes at least one symbol ($@!#%)"
      }
    ]
  %>
</fieldset>
